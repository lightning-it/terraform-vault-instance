{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "timezone": "UTC",
  "schedule": [
    "before 6am on Friday"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/terraform-module\\.yml$"
      ],
      "matchStrings": [
        "terraform_version: \\[\"(?<currentVersion1>[0-9.]+)\", \"(?<currentVersion2>[0-9.]+)\"\\]"
      ],
      "datasourceTemplate": "terraform-version",
      "depNameTemplate": "hashicorp/terraform",
      "currentValueTemplate": "{{currentVersion1}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/release\\.yml$"
      ],
      "matchStrings": [
        "node-version: ['\"]?(?<currentValue>[0-9.]+)['\"]?"
      ],
      "datasourceTemplate": "node",
      "depNameTemplate": "node",
      "versioningTemplate": "node"
    }
  ],
  "packageRules": [
    {
      "groupName": "semantic-release toolchain",
      "description": "Keep semantic-release and its plugins in sync",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "semantic-release",
        "@semantic-release/changelog",
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/github",
        "@semantic-release/git",
        "conventional-changelog-conventionalcommits"
      ],
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "description": "Highlight major updates for semantic-release itself",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "semantic-release"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "renovate",
        "breaking-release-tools"
      ]
    }
  ]
}
